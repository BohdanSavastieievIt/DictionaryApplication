@page
@model DictionaryApplication.Pages.UserDictionarySelector.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserDictionary[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserDictionary[0].Description)
            </th>
            <th>
                Studied Language
            </th>
            <th>
                Translation Language
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UserDictionary) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudiedLanguage.LangCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslationLanguage.LangCode)
            </td>
            <td>
                <a asp-page="./UserDictionaryView/Index" asp-route-id="@item.Id">Go To Words</a> | 
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> | 
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
