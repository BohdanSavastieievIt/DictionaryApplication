@page
@model DictionaryApplication.Pages.UserDictionarySelector.DeleteModel

@{
    ViewData["Title"] = "Delete Dictionary";
}

<h1>Are you sure you want to delete this dictionary?</h1>
<h4 class="error-text">Please note that all lexemes from the selected dictionary will also be deleted.</h4>
<hr />

<div class="container">

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Dictionary Name:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserDictionary.Name)
            </dd>
            @{
                if (Model.UserDictionary.Description != null && Model.UserDictionary.Description != string.Empty)
                {
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.UserDictionary.Description):
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.UserDictionary.Description)
                    </dd>
                }
            }
            <dt class="col-sm-2">
                Studied Language:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserDictionary.StudiedLanguage.LangCode)
            </dd>
            <dt class="col-sm-2">
                Translation Language:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UserDictionary.TranslationLanguage.LangCode)
            </dd>
            <dt class="col-sm-2">
                Total Lexemes:
            </dt>
            <dd class="col-sm-10">
                @ViewData["TotalLexemes"]
            </dd>
        </dl>

        <div class="custom-btns">
            <form method="post">
                <input type="hidden" asp-for="UserDictionary.Id" />
                <input type="submit" value="Delete" class="big-btn" />
            </form>

            <div class="col-mb-3">
                <a asp-page="Index" class="back-link">Back to Dictionaries</a>
            </div>
        </div>
        
    </div>
</div>
