@page
@model DictionaryApplication.Pages.UserDictionarySelector.UserDictionaryView.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["CurrentDictionaryName"]</h1>

<p>
    <a asp-page="Create" asp-route-id="@Model.UserDictionaryId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Studied Lexeme
            </th>
            <th>
                Translation
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.LexemePairs)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Lexeme1.Word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lexeme2.Word)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-userDictionaryId="@Model.UserDictionaryId" 
                        asp-route-lexeme1Id="@item.Lexeme1Id" asp-route-lexeme2Id="@item.Lexeme2Id">Edit</a>
                    <a asp-page="./Details" asp-route-userDictionaryId="@Model.UserDictionaryId"
                        asp-route-lexeme1Id="@item.Lexeme1Id" asp-route-lexeme2Id="@item.Lexeme2Id">Details</a>
                    <a asp-page="./Delete" asp-route-userDictionaryId="@Model.UserDictionaryId"
                        asp-route-lexeme1Id="@item.Lexeme1Id" asp-route-lexeme2Id="@item.Lexeme2Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
