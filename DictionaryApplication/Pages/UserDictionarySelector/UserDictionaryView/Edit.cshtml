@page
@model DictionaryApplication.Pages.UserDictionarySelector.UserDictionaryView.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>LexemePair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Lexeme.Id" value="@Model.Lexeme.Id" />
            <input type="hidden" asp-for="Translation.Id" value="@Model.Translation.Id" />
            <input type="hidden" asp-for="Lexeme.LangId" value="@Model.Lexeme.LangId" />
            <input type="hidden" asp-for="Translation.LangId" value="@Model.Translation.LangId" />
            <div class="form-group">
                <label asp-for="Lexeme.Word" class="control-label"></label>
                <input asp-for="Lexeme.Word" class="form-control" />
