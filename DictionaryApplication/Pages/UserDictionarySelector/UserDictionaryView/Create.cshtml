@page
@model DictionaryApplication.Pages.UserDictionarySelector.UserDictionaryView.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LexemePair</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Lexeme.LangId" value="@Model.LexemeLangId" />
            <input type="hidden" asp-for="Translation.LangId" value="@Model.TranslationLangId" />
            <input type="hidden" asp-for="Lexeme.DictionaryId" value="@Model.UserDictionaryId" />
            <input type="hidden" asp-for="Translation.DictionaryId" value="@Model.UserDictionaryId" />

            <div class="form-group">
                <label asp-for="Lexeme.Word" class="control-label"></label>
                <input asp-for="Lexeme.Word" class="form-control" />
                <span asp-validation-for="Lexeme.Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Translation.Word" class="control-label"></label>
                <input asp-for="Translation.Word" class="form-control" />
                <span asp-validation-for="Translation.Word" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
