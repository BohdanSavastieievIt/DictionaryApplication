@page
@model DictionaryApplication.Pages.UserDictionarySelector.UserDictionaryView.DeleteModel

@{
    ViewData["Title"] = "Delete Lexeme";
}

<h1>Are you sure you want to delete this lexeme?</h1>

<div class="container">

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                Studied Lexeme (@Model.UserDictionary.StudiedLanguage.LangCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.LexemeInput.Lexeme)
            </dd>
            <dt class="col-sm-2">
                Translations (@Model.UserDictionary.TranslationLanguage.LangCode)
            </dt>
            <dd class="col-sm-10">
                @for (int i = 0; i < Model.LexemeInput.Translations.Count; i++)
                {
                    <span>@(i + 1). </span>
                    @Html.DisplayFor(model => model.LexemeInput.Translations[i])
                    <br />
                }
            </dd>

            @if (!string.IsNullOrEmpty(Model.LexemeInput.Description))
            {
                <dt class="col-sm-2">
                    Description
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LexemeInput.Description)
                </dd>
            }
        </dl>

        <form method="post">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-page="./Index" asp-route-userDictionaryId="@Model.UserDictionary.Id" asp-route-pageId="@Model.CurrentPage">Back to List</a>
        </form>
    </div>
</div>

<div>
    <hr />
    <table>
        <thead>
            <tr>
                <td>Studied Lexeme (@Model.UserDictionary.StudiedLanguage.LangCode)</td>
                <td>Translations (@Model.UserDictionary.TranslationLanguage.LangCode)</td>
            </tr>
        </thead>
        <tbody class="table" id="tbbody">
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => Model.LexemeInput.Lexeme)
                </td>
                <td>
                    @Model.LexemeInput.Translations[0]
                </td>
            </tr>
            @if (Model.LexemeInput.Translations.Count > 1)
            {
                for (int i = 1; i < Model.LexemeInput.Translations.Count; i++)
                {
                    <tr>
                        <td></td>
                        <td>
                            @Model.LexemeInput.Translations[i]
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

    <form method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index" asp-route-userDictionaryId="@Model.UserDictionary.Id" asp-route-pageId="@Model.CurrentPage">Back to List</a>
    </form>
</div>
