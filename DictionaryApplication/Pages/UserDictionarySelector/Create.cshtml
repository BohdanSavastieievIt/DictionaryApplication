@page
@using DictionaryApplication.Pages.UserDictionarySelector
@model CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>UserDictionary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="UserDictionary.UserId" value="@Model.CurrentUserId"/>
            <div class="form-group">
                <label asp-for="UserDictionary.Name" class="control-label"></label>
                <input asp-for="UserDictionary.Name" class="form-control" />
                <span asp-validation-for="UserDictionary.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDictionary.Description" class="control-label"></label>
                <input asp-for="UserDictionary.Description" class="form-control" />
                <span asp-validation-for="UserDictionary.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDictionary.StudiedLangId">StudiedLang</label>
                <select asp-for="UserDictionary.StudiedLangId" asp-items="ViewBag.StudiedLangId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserDictionary.TranslationLangId">TranslationLang</label>
                <select asp-for="UserDictionary.TranslationLangId" asp-items="ViewBag.TranslationLangId"></select>
            </div>
            
            <div id="error-message" class="text-danger"></div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            $("form").submit(function () {
                var studiedLangId = $("#UserDictionary_StudiedLangId").val();
                var translationLangId = $("#UserDictionary_TranslationLangId").val();

                if (studiedLangId === translationLangId) {
                    $("#error-message").text("Studied Language and Translation Language cannot be the same");
                    return false;
                }

                return true;
            });
        });
    </script>
}
